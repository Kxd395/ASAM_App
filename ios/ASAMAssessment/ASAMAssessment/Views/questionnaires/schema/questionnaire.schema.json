{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://asam-app.local/questionnaire.schema.json",
  "title": "ASAM Assessment Questionnaire Schema",
  "type": "object",
  "required": ["id", "title", "domain", "version", "questions"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-f][1-6]_[a-z_]+$",
      "description": "Domain identifier (a1-f6 format)"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title for the domain"
    },
    "domain": {
      "type": "string",
      "enum": ["A", "B", "C", "D", "E", "F"],
      "description": "ASAM domain letter"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "description": "Optional description of the domain assessment"
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Question"
      }
    }
  },
  "$defs": {
    "Question": {
      "type": "object",
      "required": ["id", "text", "type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-f]\\d{2}$",
          "description": "Question identifier (e.g., a01, b15)"
        },
        "text": {
          "type": "string",
          "description": "Question text displayed to user"
        },
        "type": {
          "type": "string",
          "enum": ["single_choice", "multiple_choice", "text", "number", "boolean"],
          "description": "Question response type"
        },
        "required": {
          "type": "boolean",
          "default": false,
          "description": "Whether this question must be answered"
        },
        "breadcrumb": {
          "type": "string",
          "description": "Developer mapping hint for field correspondence"
        },
        "visible_if": {
          "$ref": "#/$defs/VisibilityCondition",
          "description": "Conditional visibility logic"
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/QuestionOption"
          },
          "description": "Available choices for single/multiple choice questions"
        },
        "validation": {
          "$ref": "#/$defs/Validation",
          "description": "Input validation rules"
        }
      }
    },
    "QuestionOption": {
      "type": "object",
      "required": ["value", "label"],
      "properties": {
        "value": {
          "oneOf": [
            {"type": "string"},
            {"type": "number"},
            {"type": "boolean"}
          ],
          "description": "Option value for scoring/logic"
        },
        "label": {
          "type": "string",
          "description": "Human-readable option text"
        },
        "score": {
          "type": "number",
          "description": "Optional scoring weight for this option"
        }
      }
    },
    "VisibilityCondition": {
      "type": "object",
      "required": ["question", "operator", "value"],
      "properties": {
        "question": {
          "type": "string",
          "description": "Question ID to check"
        },
        "operator": {
          "type": "string",
          "enum": ["equals", "not_equals", "greater_than", "less_than", "contains"],
          "description": "Comparison operator"
        },
        "value": {
          "oneOf": [
            {"type": "string"},
            {"type": "number"},
            {"type": "boolean"}
          ],
          "description": "Value to compare against"
        }
      }
    },
    "Validation": {
      "type": "object",
      "properties": {
        "min": {
          "type": "number",
          "description": "Minimum value for numeric inputs"
        },
        "max": {
          "type": "number",
          "description": "Maximum value for numeric inputs"
        },
        "pattern": {
          "type": "string",
          "description": "Regex pattern for text validation"
        },
        "min_length": {
          "type": "integer",
          "minimum": 0,
          "description": "Minimum text length"
        },
        "max_length": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum text length"
        }
      }
    }
  }
}