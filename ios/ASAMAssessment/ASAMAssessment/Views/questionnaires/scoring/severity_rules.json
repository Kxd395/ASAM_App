{
  "version": "1.0.0",
  "description": "Neutral severity scoring rules for ASAM domains",
  "domains": {
    "A": {
      "name": "Withdrawal Management",
      "scoring": {
        "method": "weighted_average",
        "critical_questions": ["a01", "a02", "a03"],
        "thresholds": {
          "level_1": {"min": 1.0, "max": 1.7, "description": "Minimal risk"},
          "level_2": {"min": 1.8, "max": 2.4, "description": "Low to moderate risk"},
          "level_3": {"min": 2.5, "max": 3.2, "description": "Moderate to high risk"},
          "level_4": {"min": 3.3, "max": 4.0, "description": "High risk"}
        },
        "overrides": [
          {
            "condition": {"question": "a01", "value": "severe"},
            "severity": 4,
            "reason": "Severe intoxication requires highest level"
          },
          {
            "condition": {"question": "a03", "value": "severe"},
            "severity": 4,
            "reason": "Severe withdrawal symptoms require medical management"
          }
        ]
      }
    },
    "B": {
      "name": "Biomedical Conditions",
      "scoring": {
        "method": "weighted_average",
        "critical_questions": ["b01", "b02", "b04"],
        "thresholds": {
          "level_1": {"min": 1.0, "max": 1.7, "description": "Minimal medical complexity"},
          "level_2": {"min": 1.8, "max": 2.4, "description": "Low to moderate complexity"},
          "level_3": {"min": 2.5, "max": 3.2, "description": "Moderate to high complexity"},
          "level_4": {"min": 3.3, "max": 4.0, "description": "High medical complexity"}
        },
        "overrides": [
          {
            "condition": {"question": "b01", "value": "severe"},
            "severity": 4,
            "reason": "Severe medical conditions require intensive management"
          },
          {
            "condition": {"question": "b07", "value": "pregnant_high_risk"},
            "severity": 4,
            "reason": "High-risk pregnancy requires specialized care"
          }
        ]
      }
    },
    "C": {
      "name": "Emotional/Psychiatric",
      "scoring": {
        "method": "weighted_average",
        "critical_questions": ["c01", "c02", "c05"],
        "thresholds": {
          "level_1": {"min": 1.0, "max": 1.7, "description": "Minimal psychiatric complexity"},
          "level_2": {"min": 1.8, "max": 2.4, "description": "Low to moderate complexity"},
          "level_3": {"min": 2.5, "max": 3.2, "description": "Moderate to high complexity"},
          "level_4": {"min": 3.3, "max": 4.0, "description": "High psychiatric complexity"}
        },
        "overrides": [
          {
            "condition": {"question": "c02", "value": "active_with_plan"},
            "severity": 4,
            "reason": "Active suicidal ideation with plan requires crisis intervention"
          },
          {
            "condition": {"question": "c07", "contains": "psychosis"},
            "severity": 4,
            "reason": "Psychotic symptoms require intensive psychiatric care"
          }
        ]
      }
    },
    "D": {
      "name": "Readiness to Change",
      "scoring": {
        "method": "weighted_average",
        "critical_questions": ["d01", "d02", "d05"],
        "thresholds": {
          "level_1": {"min": 1.0, "max": 1.7, "description": "High readiness"},
          "level_2": {"min": 1.8, "max": 2.4, "description": "Moderate readiness"},
          "level_3": {"min": 2.5, "max": 3.2, "description": "Low readiness"},
          "level_4": {"min": 3.3, "max": 4.0, "description": "Very low readiness"}
        },
        "overrides": [
          {
            "condition": {"question": "d01", "value": "no_problem"},
            "severity": 4,
            "reason": "No recognition of problem indicates need for motivation enhancement"
          },
          {
            "condition": {"question": "d05", "value": "precontemplation"},
            "severity": 4,
            "reason": "Precontemplation stage requires intensive engagement"
          }
        ]
      }
    },
    "E": {
      "name": "Relapse Risk",
      "scoring": {
        "method": "weighted_average",
        "critical_questions": ["e01", "e02", "e04"],
        "thresholds": {
          "level_1": {"min": 1.0, "max": 1.7, "description": "Low relapse risk"},
          "level_2": {"min": 1.8, "max": 2.4, "description": "Low to moderate risk"},
          "level_3": {"min": 2.5, "max": 3.2, "description": "Moderate to high risk"},
          "level_4": {"min": 3.3, "max": 4.0, "description": "High relapse risk"}
        },
        "overrides": [
          {
            "condition": {"question": "e01", "value": "frequent"},
            "severity": 4,
            "reason": "Frequent relapse history indicates high risk"
          },
          {
            "condition": {"question": "e02", "value": "severe"},
            "severity": 4,
            "reason": "Severe cravings indicate high relapse risk"
          }
        ]
      }
    },
    "F": {
      "name": "Recovery Environment",
      "scoring": {
        "method": "weighted_average",
        "critical_questions": ["f01", "f02", "f03"],
        "thresholds": {
          "level_1": {"min": 1.0, "max": 1.7, "description": "Highly supportive environment"},
          "level_2": {"min": 1.8, "max": 2.4, "description": "Moderately supportive"},
          "level_3": {"min": 2.5, "max": 3.2, "description": "Minimally supportive"},
          "level_4": {"min": 3.3, "max": 4.0, "description": "Unsupportive or high-risk environment"}
        },
        "overrides": [
          {
            "condition": {"question": "f01", "value": "high_risk"},
            "severity": 4,
            "reason": "High-risk environment with substance use present"
          },
          {
            "condition": {"question": "f03", "value": "readily_available"},
            "severity": 4,
            "reason": "Ready substance availability in environment"
          }
        ]
      }
    }
  },
  "global_rules": {
    "minimum_questions_required": 3,
    "default_severity_if_insufficient_data": 2,
    "score_aggregation": {
      "method": "domain_specific",
      "description": "Each domain uses its own scoring method and thresholds"
    }
  }
}