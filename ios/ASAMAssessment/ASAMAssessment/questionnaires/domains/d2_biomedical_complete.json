    {
      "id": "d2_14a_activities_description",
      "text": "Please describe:",
      "type": "textarea",
      "required": false,
      "breadcrumb": "activities_description"
    },
    {
      "id": "d2_15",
      "text": "How much do these health issues make it harder for you to go to SUD treatment or stay in SUD treatment?",
      "type": "single_choice",
      "required": true,
      "breadcrumb": "impact_on_sud_treatment",
      "options": [
        {"value": "1", "label": "Not at all", "score": 1},
        {"value": "2", "label": "A Little", "score": 2},
        {"value": "3", "label": "Somewhat", "score": 3},
        {"value": "4", "label": "Very", "score": 4},
        {"value": "5", "label": "Extremely", "score": 5},
