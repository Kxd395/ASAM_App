      "type": "single_choice",
      "required": true,
      "breadcrumb": "life_threatening_symptoms",
      "options": [
        {"value": "yes", "label": "Yes"},
        {"value": "no", "label": "No"}
      ]
    },
    {
      "id": "d2_19a_life_threatening_notes",
      "text": "Notes:",
      "type": "textarea",
