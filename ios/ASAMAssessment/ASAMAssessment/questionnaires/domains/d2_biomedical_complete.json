      "breadcrumb": "severity_rating",
      "options": [
        {"value": "0", "label": "0 - None", "score": 0},
        {"value": "1", "label": "1 - Mild", "score": 1},
        {"value": "2", "label": "2 - Moderate", "score": 2},
        {"value": "3", "label": "3 - Severe", "score": 3},
        {"value": "4", "label": "4 - Very Severe", "score": 4}
