{
  "id": "b2_biomedical_neutral",
  "title": "Domain B: Biomedical Conditions and Complications",
  "domain": "B",
  "version": "1.0.0",
  "description": "Assessment of medical conditions that may impact treatment",
  "questions": [
    {
      "id": "b01",
      "text": "Does the patient have any current medical conditions?",
      "type": "single_choice",
      "required": true,
      "breadcrumb": "current_medical_conditions",
      "options": [
        {"value": "none", "label": "No current medical conditions", "score": 1},
        {"value": "mild", "label": "Stable conditions not affecting treatment", "score": 2},
        {"value": "moderate", "label": "Conditions requiring monitoring", "score": 3},
        {"value": "severe", "label": "Conditions requiring intensive management", "score": 4}
      ]
    },
    {
      "id": "b02",
      "text": "Is the patient currently taking prescribed medications?",
      "type": "single_choice",
      "required": true,
      "breadcrumb": "prescribed_medications",
      "options": [
        {"value": "none", "label": "No prescribed medications", "score": 1},
        {"value": "few", "label": "1-3 medications, stable regimen", "score": 2},
        {"value": "multiple", "label": "4+ medications or complex regimen", "score": 3},
        {"value": "critical", "label": "Life-sustaining medications", "score": 4}
      ]
    },
    {
      "id": "b03",
      "text": "Has the patient had any recent hospitalizations (past 6 months)?",
      "type": "boolean",
      "required": true,
      "breadcrumb": "recent_hospitalizations"
    },
    {
      "id": "b04",
      "text": "What is the patient's current physical health status?",
      "type": "single_choice",
      "required": true,
      "breadcrumb": "physical_health_status",
      "options": [
        {"value": "excellent", "label": "Excellent - no limitations", "score": 1},
        {"value": "good", "label": "Good - minor limitations", "score": 2},
        {"value": "fair", "label": "Fair - some functional limitations", "score": 3},
        {"value": "poor", "label": "Poor - significant limitations", "score": 4}
      ]
    },
    {
      "id": "b05",
      "text": "Does the patient have any infectious diseases requiring special precautions?",
      "type": "single_choice",
      "required": true,
      "breadcrumb": "infectious_diseases",
      "options": [
        {"value": "none", "label": "No infectious diseases", "score": 1},
        {"value": "stable", "label": "Stable/treated infectious disease", "score": 2},
        {"value": "active", "label": "Active infectious disease", "score": 3},
        {"value": "contagious", "label": "Highly contagious condition", "score": 4}
      ]
    },
    {
      "id": "b06",
      "text": "Rate the patient's ability to manage their own medical care (1-4 scale)",
      "type": "single_choice",
      "required": true,
      "breadcrumb": "self_care_ability",
      "options": [
        {"value": "independent", "label": "Fully independent", "score": 1},
        {"value": "minimal_help", "label": "Needs minimal assistance", "score": 2},
        {"value": "significant_help", "label": "Needs significant assistance", "score": 3},
        {"value": "dependent", "label": "Completely dependent on others", "score": 4}
      ]
    },
    {
      "id": "b07",
      "text": "Are there any pregnancy-related considerations?",
      "type": "single_choice",
      "required": false,
      "breadcrumb": "pregnancy_considerations",
      "visible_if": {
        "question": "patient_gender",
        "operator": "equals",
        "value": "female"
      },
      "options": [
        {"value": "not_applicable", "label": "Not applicable", "score": 1},
        {"value": "not_pregnant", "label": "Not pregnant", "score": 1},
        {"value": "pregnant_stable", "label": "Pregnant - stable", "score": 3},
        {"value": "pregnant_high_risk", "label": "Pregnant - high risk", "score": 4}
      ]
    }
  ]
}