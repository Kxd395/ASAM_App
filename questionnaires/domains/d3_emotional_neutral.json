      "required": false,
      "breadcrumb": "mh_symptoms",
      "categorized_health_issues": {
        "categories": [
          {
            "id": "mood",
            "title": "Mood",
            "items": [
              {"id": "depression", "label": "Depression/Sadness", "requires_note": false},
              {"id": "loss_pleasure", "label": "Loss of pleasure/interest", "requires_note": false},
              {"id": "hopelessness", "label": "Hopelessness", "requires_note": false},
              {"id": "irritability", "label": "Irritability/Anger", "requires_note": false},
              {"id": "impulsivity", "label": "Impulsivity", "requires_note": false},
              {"id": "pressured_speech", "label": "Interviewer observation: Pressured speech", "requires_note": false},
              {"id": "grandiosity", "label": "Feeling unusually important/Grandiosity", "requires_note": false},
              {"id": "racing_thoughts", "label": "Racing thoughts", "requires_note": false}
            ]
          },
          {
            "id": "anxiety",
            "title": "Anxiety",
            "items": [
              {"id": "anxiety", "label": "Anxiety", "requires_note": false},
              {"id": "excessive_worry", "label": "Anxiety/Excessive worry", "requires_note": false}
            ]
          },
          {
            "id": "obsessions_compulsions",
            "title": "Obsessions/Compulsions",
            "items": [
              {"id": "obsessive_thoughts", "label": "Thoughts that you cannot stop if you want to/Obsessive thoughts", "requires_note": false},
              {"id": "compulsive_behaviors", "label": "Behaviors that you cannot stop if you want to/Compulsive behaviors", "requires_note": false}
            ]
          },
          {
            "id": "trauma",
            "title": "Trauma related",
            "items": [
              {"id": "flashbacks", "label": "Flashbacks", "requires_note": false}
            ]
          },
          {
            "id": "psychosis",
            "title": "Psychosis",
            "items": [
              {"id": "psychosis_observed", "label": "Psychosis â€” Include interviewer observation", "requires_note": false},
              {"id": "paranoia", "label": "Paranoia", "requires_note": false},
              {"id": "delusions", "label": "Delusions, feeling you were especially important in some way, or that you were receiving special messages, or that people were out to harm you", "requires_note": false}
            ]
          },
          {
            "id": "other_symptoms",
            "title": "Other",
            "items": [
              {"id": "sleep_problems", "label": "Sleep problems", "requires_note": false},
              {"id": "memory_concentration", "label": "Memory/Concentration", "requires_note": false},
              {"id": "gambling", "label": "Gambling", "requires_note": false},
              {"id": "risky_sex", "label": "Risky sex behaviors", "requires_note": false},
              {"id": "physical_aggression", "label": "Physical aggression towards people or property", "requires_note": true},
              {"id": "other", "label": "Other", "requires_note": true}
            ]
          }
        ],
        "macros": ["none_of_the_above"]
      }
    },
    {
